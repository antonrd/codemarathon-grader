<table class="table table-striped table-bordered table-hover table-condensed">
  <% @runs.each do |run| %>
    <tr>
      <td><%= run.id %></td>
      <td><%= run.task.name if !run.task.nil? %></td>
      <td><%= run.status %></td>
      <td><%= run.code %></td>
      <td><%= run.message %></td>
      <td><%= run.max_memory_kb %></td>
      <td><%= run.max_time_ms %></td>
      <td><%= run.data %></td>
      <td>
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modal_<%= run.id %>">
          View logs
        </button>
      </td>
      <td><%= run.created_at.to_formatted_s(:short) %></td>
    </tr>
  <% end %>
</table>

<% @runs.each do |run| %>
  <%= render 'run_log', run: run %>
<% end %>
